pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello jenkins'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'ls -R 7_Calculator'
                sh 'docker compose -f ./4_Calculator/4_Calculate/docker-compose.yml build'
            }
        }
		stage('Start Docker Container') {
            steps {
                sh 'docker compose -f ./4_Calculator/4_Calculate/docker-compose.yml up -d'
            }
        }
    }
}
